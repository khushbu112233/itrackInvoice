<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.45"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">
            <com.invoice.aipxperts.Widget.TextView_Regular
                android:id="@+id/txt_number_type"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:textColor="@color/header"
                android:text="Number Type"
                android:layout_alignParentLeft="true"
                android:paddingLeft="7dp"
                android:paddingTop="10dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="@dimen/lablesize"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:paddingLeft="7dp"
                android:background="@color/header"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.45"
            android:layout_height="40dp"
            android:orientation="vertical">
            <com.invoice.aipxperts.Widget.Edittext_Regular
                android:id="@+id/edt_gst_no"
                android:layout_toRightOf="@+id/ll_check"
                android:layout_toLeftOf="@+id/ll_delete"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_centerInParent="true"
                android:inputType="text"
                android:textColorHint="@color/header"
                android:textColor="@color/header"
                android:background="@null"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textSize="@dimen/lablesize"
                android:maxLength="180"
                android:hint=""
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/header"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_delete"
            android:layout_width="0dp"
            android:layout_weight="0.10"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@mipmap/remove_main"
                />
        </LinearLayout>
    </LinearLayout>
</layout>