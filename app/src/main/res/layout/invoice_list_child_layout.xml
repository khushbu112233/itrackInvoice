<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <!-- Bottom View Start-->
        <LinearLayout
            android:id="@+id/bottom_wrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/edit_paid"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
                    android:src="@mipmap/paid" />
                <com.invoice.aipxperts.Widget.TextView_Regular
                    android:id="@+id/txt_paid"
                    android:layout_below="@+id/edit_paid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_centerInParent="true"
                    android:text="Paid"
                    android:textColor="@color/header"/>
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:background="@color/header"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                >

                <ImageView
                    android:id="@+id/edit_query"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/edit" />
                <com.invoice.aipxperts.Widget.TextView_Regular
                    android:id="@+id/txt_edit"
                    android:layout_below="@+id/edit_query"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_centerInParent="true"
                    android:text="Edit"
                    android:textColor="@color/header"/>
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:background="@color/header"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                >

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
                    android:src="@mipmap/share" />
                <com.invoice.aipxperts.Widget.TextView_Regular
                    android:id="@+id/txt_share"
                    android:layout_below="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_centerInParent="true"
                    android:text="Share"
                    android:textColor="@color/header"/>
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:background="@color/header"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                >

                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
                    android:src="@mipmap/delete" />
                <com.invoice.aipxperts.Widget.TextView_Regular
                    android:id="@+id/txt_delete"
                    android:layout_below="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_centerInParent="true"
                    android:text="Delete"
                    android:textColor="@color/red"/>
            </RelativeLayout>


        </LinearLayout>
        <!-- Bottom View End-->

        <!-- Surface View Start -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/content"
            android:padding="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rel_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    >
                    <android.support.v7.widget.CardView
                        android:id="@+id/cardfriend1"
                        android:layout_width="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:elevation="0dp"
                        android:padding="1dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="0dp"
                        android:layout_height="50dp">

                        <ImageView
                            android:id="@+id/imgInvoice"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/ic_launcher_round" />
                    </android.support.v7.widget.CardView>

                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/ll_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/rel_image"
                    android:orientation="vertical">
                    <com.invoice.aipxperts.Widget.TextView_Regular
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="IVibeLite"
                        android:textColor="@color/header"/>
                    <com.invoice.aipxperts.Widget.TextView_Regular
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Nov 6 2017"
                        android:textColor="@color/header"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_toRightOf="@+id/ll_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.invoice.aipxperts.Widget.TextView_Regular
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="$ 880"
                            android:textColor="@color/header"/>
                        <com.invoice.aipxperts.Widget.TextView_Regular
                            android:id="@+id/status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Pending"
                            android:textColor="@color/header"/>
                        <com.invoice.aipxperts.Widget.TextView_Regular
                            android:id="@+id/due_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Nov 6 2017"
                            android:textColor="@color/header"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <!-- Surface View End -->
    </com.daimajia.swipe.SwipeLayout>
</layout>